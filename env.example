# Environment Variables for QA Agent - Phase 1

# OpenAI Settings (REQUIRED)
OPENAI_API_KEY=OPENAI_API_KEY

# LLM Settings (optional - defaults shown)
LLM_MODEL=gpt-4.1-mini
LLM_TEMPERATURE=0.2

# LangGraph Settings (optional - defaults shown)
MAX_STEPS=50
MAX_RETRIES=3

# OnKernal Browser CDP Connection (Chrome DevTools Protocol)
# The backend connects to OnKernal Browser via CDP on port 9222
# The browser UI is available on port 8080 (for frontend iframe)
KERNEL_CDP_HOST=localhost
KERNEL_CDP_PORT=9222

# Browser Settings (optional - defaults shown)
HEADLESS=False

# Logging (optional - defaults shown)
LOG_LEVEL=INFO
